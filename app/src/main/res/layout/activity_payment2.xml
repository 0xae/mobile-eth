<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dk.ethereumwallet.PaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/payment_container"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:text="Enviar pagamento"
            android:padding="10dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <EditText
            android:id="@+id/payment_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Endereco"
            android:padding="13dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="44dp" />

        <EditText
            android:id="@+id/payment_value"
            android:layout_width="match_parent"
            android:padding="13dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="0.00 ETH"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="98dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/payment_container"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/cancel_payment"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="440dp" />

        <Button
            android:id="@+id/send_payment"
            android:layout_width="218dp"
            android:layout_height="50dp"
            android:text="Enviar pagamento"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="440dp"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
