<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dk.ethereumwallet.ReceivePaymentActivity"
    tools:showIn="@layout/activity_receive_payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:paddingTop="1dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="330dp"
            android:layout_height="37dp"
            android:layout_gravity="start"
            android:text="Receber pagamento"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
        />

        <ImageView
            android:id="@+id/payment_qrcode"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="132dp" />

        <Button
            android:id="@+id/copy_address"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:text="copiar endereco"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="445dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
